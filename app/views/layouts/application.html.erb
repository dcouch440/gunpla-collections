<!DOCTYPE html>
<html>
  <head>
    <title>White Base Hanger Collections</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link ref="stylesheet" href="./app/assets/stylesheets/gunplas.css">
  </head>

  <body>
    <div id="body-container">
      <div id='navbar'>
        <div id="navigation">
          <a class='link-default' href='/gunplas'>Home</a>
          <% if current_user %>
            <a class='link-default' href='/gunplas/collection'>Collections</a>
          <% end %>
        </div>
        <div id="account">
          <div id="account-button-container">
            <% if current_user %>
              <div class='user-display'>
                <%= current_user.username %>
              </div>
              <button class='button-default account-button'>
                <a href='/users/edit'>Update Account</a>
              </button>
              <button class='button-default account-button'>
                <a href='/users/sign_out' data-method='delete'>Sign Out</a>
              </button>
            <% else %>
              <button class='button-default account-button'>
                <a href='/users/sign_up'>Sign Up</a>
              </button>
              <button class='button-default account-button'>
                <a href='/users/sign_in'>Sign In</a>
              </button>
            <% end %>
          </div>
        </div>
      </div>
      <div id="page-container">
      <%= yield %>
      </div>
    </div>
  </body>
</html>
